            "mount_options": [],
            "mountpoint": "/boot",
            "obj_id": "boot",
            "size": {
              "sector_size": {
                "unit": "B",
                "value": 512
              },
              "unit": "GiB",
              "value": 1
            },
            "start": {
              "sector_size": {
                "unit": "B",
                "value": 512
              },
              "unit": "MiB",
              "value": 1
            },
            "status": "create",
            "type": "primary"
          },
          {
            "btrfs": [],
            "dev_path": null,
            "flags": [],
            "fs_type": "ext4",
            "mount_options": [],
            "mountpoint": "/",
            "obj_id": "root",
            "size": {
              "sector_size": {
                "unit": "B",
                "value": 512
              },
              "unit": "B",
              "value": 999129350144
            },
            "start": {
